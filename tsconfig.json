{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": true,
    "outDir": "build/",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["bun-types"]
  },
  "exclude": ["generated"],
  "include": ["src/**/*"]
}
